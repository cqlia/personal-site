---
import BaseLayout from "@layouts/BaseLayout.astro";

import { SITE_DESCRIPTION } from "../consts";
---

<BaseLayout title={"page not found"} description={SITE_DESCRIPTION}>
  <main>
    <div class="header">
      <h1>page not found...</h1>
    </div>
    <div class="links">
      <a href="/">home</a>
    </div>
  </main>
</BaseLayout>

<style>
  h1 {
    font-size: 2em;
    font-weight: inherit;
  }

  main {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .header {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
    gap: 0.75em;
  }
</style>
