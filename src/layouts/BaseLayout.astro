---
import "../styles/global.css";

import BaseHead from "@components/BaseHead.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title: string;
  description: string;
  hideMetadata?: boolean;
}

const { title, description, hideMetadata = false } = Astro.props;
---

<style>
  html {
    min-height: 100vh;
    margin: 0;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    margin: 0;

    font-family: "Ubuntu Sans Mono", monospace;
    font-optical-sizing: auto;
    font-weight: 300;
    font-style: normal;
  }

  .content {
    justify-content: start;
    flex-grow: 1;
  }
</style>

<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      hideMetadata={hideMetadata}
    />
  </head>
  <body>
    <div class="content">
      <slot />
    </div>
    <Footer />
  </body>
</html>
